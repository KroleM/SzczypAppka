<UserControl xmlns="https://github.com/avaloniaui"
			 xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
			 xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
			 xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
			 mc:Ignorable="d" d:DesignWidth="800" d:DesignHeight="450"
			 x:Class="AvaloniaApp.Views.VaccineNewView"
			 xmlns:vm="using:AvaloniaApp.ViewModels"
			 x:DataType="vm:NewVaccineViewModel">
	<Grid RowDefinitions="Auto,Auto,Auto,Auto,Auto,*"
		  ColumnDefinitions="Auto,*">
		<Label Grid.Row="0" Grid.Column="0" Content="Nazwa"/>
		<TextBox Grid.Row="0" Grid.Column="1" Text="{Binding Name}"/>
		<Label Grid.Row="1" Grid.Column="0" Content="Opis"/>
		<TextBox Grid.Row="1" Grid.Column="1" Text="{Binding Description}"/>
		<Label Grid.Row="2" Grid.Column="0" Content="Aktywne"/>
		<CheckBox Grid.Row="2" Grid.Column="1" IsChecked="{Binding IsActive}"/>
		<Label Grid.Row="3" Grid.Column="0" Content="Choroba"/>
		<StackPanel Grid.Row="3" Grid.Column="1" Orientation="Horizontal">
			<ItemsControl ItemsSource="{Binding CurrentIllnesses}">
				<ItemsControl.ItemTemplate>
					<DataTemplate>
						<Label Content="{Binding Name}"/>
					</DataTemplate>
				</ItemsControl.ItemTemplate>
			</ItemsControl>
			<ComboBox
				MinWidth="100"
				ItemsSource="{Binding AvailableIllnesses}"
				SelectedItem="{Binding SelectedIllness}">
				<ComboBox.ItemTemplate>
					<DataTemplate>
						<Label Content="{Binding Name}"/>
					</DataTemplate>
				</ComboBox.ItemTemplate>
			</ComboBox>
			<Button Content="Dodaj" Command="{Binding AddSelectedIllnessCommand}"/>
		</StackPanel>
		<Button Grid.Row="4" Grid.Column="0" Content="Zapisz" Command="{Binding SaveCommand}"/>

	</Grid>
</UserControl>
